@{
    ViewData["Title"] = "Footballers Editor";
    @model Footballer
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Birthday" class="control-label"></label>
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        <select asp-for="TeamId" asp-items="@(new SelectList(ViewBag.Teams, "Id", "Name"))" class="form-control"></select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <select asp-for="Country" class="form-control">
            <option value="">Select Country</option>
            <option value="Estonia">Estonia</option>
            <option value="USA">USA</option>
            <option value="Italy">Italy</option>
        </select>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

